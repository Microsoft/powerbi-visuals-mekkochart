  "devDependencies": {
    "@types/jasmine": "2.5.37",
    "@types/jasmine-jquery": "1.5.28",
    "d3": "3.5.5",
    "jasmine": "2.5.2",
    "jasmine-jquery": "2.1.1",
    "jquery": "3.1.1",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-jasmine": "1.0.2",
    "karma-typescript-preprocessor": "0.3.0",
    "lodash": "4.16.2",
